doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="theme-color", content="#3700ff")
        title Login to Favcon
        link(rel="stylesheet", href="/css/login.css")
        link(rel="icon", href="/img/icon.png", type="image/png")
        script(src="/socket.io/socket.io.js")
    body 
        section.sec
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#3700ff" fill-opacity="1" d="M0,160L48,165.3C96,171,192,181,288,160C384,139,480,85,576,90.7C672,96,768,160,864,202.7C960,245,1056,267,1152,277.3C1248,288,1344,288,1392,288L1440,288L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>
            div.bubble
            div.container 
                div.image 
                    div.img 
                        img(src="/img/img.png", alt="")
                    h1 Favcon
                    p Welcome back, to continue with Favcon please kindly login
                div.fill 
                    div.head 
                        div.logo 
                            img(src="/img/img.png", alt="")
                        h1 Login 
                    form(action="/login", method="post")
                        div.field 
                            label(for="username") Username
                            input(type="text", name="username", id="username", required, placeholder="Username") 
                        div.field 
                            label(for="password") Password
                            input(type="password", name="password", id="password", required, placeholder="Password") 
                            img(src="/img/view.png", alt="", id="view-pass")
                        div.field#submit-field 
                            div.message#warn= message
                            div.inp-f
                                input(type="submit", value="Login", id="submit")
                                div.loading#loading
                                    div.load
                    footer 
                        span Don't have an account?
                        a(href="/signup") Signup
        script(src="/js/login.js") 